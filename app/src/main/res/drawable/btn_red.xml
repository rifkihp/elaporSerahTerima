<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/red" />
            <stroke
                android:width="1dp"
                android:color="@color/red" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/red"
                android:endColor="@color/red"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/red" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
                        
        </shape>
    </item>
</selector>