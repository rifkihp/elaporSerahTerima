<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#0000FF" />
            <stroke
                android:width="1dp"
                android:color="#0000A0" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0000FF"
                android:endColor="#0000A0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0000A0" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>