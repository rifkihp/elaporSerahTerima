<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@android:color/holo_blue_light" />
            <stroke
                android:width="1dp"
                android:color="@android:color/holo_blue_light" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B6B6B4"
                android:endColor="#B6B6B4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B6B6B4" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>